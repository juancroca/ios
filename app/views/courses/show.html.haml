.container

  - if not @course.closed
    .row
      .twelve.columns
        %h2
          = @course.name

    .row
      .six.columns
        = "This course has #{@course.groups.length} groups and #{@course.students.length} currently registered students"

    .row
      .twelve.columns
        = link_to "Edit", edit_course_path(@course), :class => 'button'
        = link_to "Start distribution", start_course_path(), :data => {:confirm => 'Running the assignment will close the enrollment. This action cannot be undone. Are you sure you want to start?'}, :class => 'button'
    .row
      .six.columns
        - if @course.students.active.empty
          %h4
            Registered students:
            - @course.students.each_slice(2) do |someStudents|
              .row
                - someStudents.each do |student|
                  .six.columns
                    = "#{student.name} - #{student.email}"
        - else
          No students registered yet

  - if @course.closed
    .row
      %h2
        Result of distribution
        - if supervisor_signed_in?
          - @jobs.each do |job|
            %h4
              Job #
              = job.id
            - job.groups.each do |group|
              %h5= group.name
              .row
                %ul
                  - group.students.each do |student|
                    %li= student.name
        - if student_signed_in?
          %h5= @group.name
          .row
            %ul
              - @group.students.each do |student|
                %li= student.name
